    {
      "name": "Validation Errors (400 Expected)",
      "description": "These tests verify that the validation proxy rejects invalid payloads with 400 errors. Invalid requests never reach MockServer.",
      "item": [
        {
          "name": "Empty body rejected",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Empty body returns 400', function () {",
                  "    pm.expect(pm.response.code).to.equal(400);",
                  "});",
                  "",
                  "pm.test('Response contains validation error', function () {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.error).to.equal('Request validation failed');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": ""
            },
            "url": {
              "raw": "{{baseUrl}}/api/v2/bu-g-items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v2", "bu-g-items"]
            }
          }
        },
        {
          "name": "Invalid JSON rejected",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Invalid JSON returns 400', function () {",
                  "    pm.expect(pm.response.code).to.equal(400);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ invalid json }"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v2/bu-g-items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v2", "bu-g-items"]
            }
          }
        },
        {
          "name": "Missing required fields rejected",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Missing required fields returns 400', function () {",
                  "    pm.expect(pm.response.code).to.equal(400);",
                  "});",
                  "",
                  "pm.test('Response lists missing fields', function () {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.validationErrors).to.be.an('array');",
                  "    pm.expect(json.validationErrors.length).to.be.greaterThan(0);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Item Without ID or businessUnitGroupId\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v2/bu-g-items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v2", "bu-g-items"]
            }
          }
        },
